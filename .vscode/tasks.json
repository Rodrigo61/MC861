{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "asm6f",
            "args": [
                "${fileBasenameNoExtension}.asm",
                "${fileBasenameNoExtension}.nes",
                "${fileBasenameNoExtension}.txt"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}